@model GestorContatos.Models.Contato

@{
    ViewBag.Title = ":: Contatos ::";
}

<h2>Detalhes do Contato</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.CodContato)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.CodContato)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Nome)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.DataNascimento)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.DataNascimento)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Endereco)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Endereco)
    </dd>
</dl>

@if (Model.Telefones.Count > 0)
{
    <h3>Telefones do contato</h3>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Numero")
                </th>
                <th>
                    @Html.DisplayName("Operadora")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Telefones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Operadora.Nome)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    @Html.ActionLink("Voltar", "Index")
</p>
